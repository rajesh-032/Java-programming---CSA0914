import java.util.Scanner;

public class MinutesToYearsDaysConverter {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Constants
        final int MINUTES_IN_HOUR = 60;
        final int HOURS_IN_DAY = 24;
        final int DAYS_IN_YEAR = 365;

        // Prompt the user for input
        System.out.print("Input the number of minutes: ");
        long minutes = scanner.nextLong();

        // Convert minutes to total days
        long totalDays = minutes / (MINUTES_IN_HOUR * HOURS_IN_DAY);
        
        // Calculate years and remaining days
        long years = totalDays / DAYS_IN_YEAR;
        long days = totalDays % DAYS_IN_YEAR;

        // Display the result
        System.out.printf("Equivalent time: %d years and %d days%n", years, days);
        
        scanner.close();
    }
}
