import java.util.Scanner;

public class EmployeeBonus {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Input employee salary and grade
        System.out.print("Enter employee salary: Rs. ");
        double salary = scanner.nextDouble();
        
        System.out.print("Enter employee grade (A/B): ");
        char grade = scanner.next().charAt(0);

        // Calculate bonus
        double bonus = 0.0;
        
        // Determine bonus percentage based on grade and salary
        if (grade == 'A' || grade == 'a') {
            bonus = 0.05 * salary; // 5% for grade A
        } else if (grade == 'B' || grade == 'b') {
            bonus = 0.10 * salary; // 10% for grade B
        } else {
            System.out.println("Invalid grade. Please enter A or B.");
            scanner.close();
            return;
        }

        // Extra 2% bonus if salary is less than 10,000
        if (salary < 10000) {
            bonus += 0.02 * salary; // Additional 2%
        }

        // Calculate total salary after bonus
        double totalSalary = salary + bonus;

        // Output the bonus and total salary
        System.out.printf("Bonus: Rs. %.2f%n", bonus);
        System.out.printf("Total salary after bonus: Rs. %.2f%n", totalSalary);

        // Close the scanner
        scanner.close();
    }
}
